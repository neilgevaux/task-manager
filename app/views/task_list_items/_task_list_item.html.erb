<p><% task_list_item.content %></p>

<div class="card" style="width: 100%;">
<% if task_list_item.completed? %>
    <div class="task-list-item">
        <ul class="list-group list-group-flush">
            <li class="list-group-item strike"><%= task_list_item.content %></li>
            <li class="list-group-item strike"><%= task_list_item.date_completed %></li>
        </ul>
     </div>
     <div class="btn-group">
        <%= button_to "Completed", complete_task_list_task_list_item_path(@task_list, task_list_item.id), method: :patch, class: "btn btn-secondary btn-sm grouped" %>
        <%= button_to "Delete", task_list_task_list_item_path(@task_list, task_list_item.id), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
    </div>

    <% else %>

    <div class="task-list-item">
        <ul class="list-group list-group-flush">
            <li  class="list-group-item"><%= task_list_item.content %></li>
         </ul>
    </div>
    <div class="btn-group">
        <%= button_to "Mark as complete", complete_task_list_task_list_item_path(@task_list, task_list_item.id), method: :patch, class: "btn btn-warning btn-sm grouped" %>
        <%= button_to "Delete", task_list_task_list_item_path(@task_list, task_list_item.id), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
    </div>

    <% end %>
     
</div><!-- End card -->