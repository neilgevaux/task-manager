<p><%= task_list_item.content %></p>

<div class="clearfix">
    <% if task_list_item.completed? %>
        <div class="complete">
            <%= button_to "Mark as complete", complete_task_list_task_list_item_path(@task_list, task_list_item.id), method: :patch %>
             <div class="task-list-item">
                <p class="strike"><%= task_list_item.content %></p>
            </div>
            <div class="trash">
                <%= button_to "Delete", task_list_task_list_item_path(@task_list, task_list_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
        </div>
    <% else %>
         <div class="complete">
            <%= button_to "Mark as complete", complete_task_list_task_list_item_path(@task_list, task_list_item.id), method: :patch %>
             <div class="task-list-item">
                <p><%= task_list_item.content %></p>
            </div>
            <div class="trash">
                <%= button_to "Delete", task_list_task_list_item_path(@task_list, task_list_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
        </div>
    <% end %>
</div>