<div id="<%= dom_id task_list %>">
  <div class="card bucket" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= task_list.title %></h5>
          <strong>Description:</strong>
          <%= task_list.description %>
          <p>
            <%= link_to "Open this bucket", task_list, class: "btn btn-secondary btn-sm" %>
          </p>
          <p>Bucket ID: <%= @bucket_id = task_list.id %></p>
          <p>Number of tasks: <%= @task_list_items.select(@bucket_id).count(:task_list_id) %></p>
          <p>Tasks: <%= @item_count %></p>
    </div><!-- End card body -->
  </div><!-- End card -->
</div>
