<p style="color: green"><%= notice %></p>

<h1>My buckets</h1>
<%= link_to "Add a bucket", new_task_list_path, class: "btn btn-primary" %>
<div id="task_lists">
<!-- For info: To display cards as Boostrap Grid, it's necessary to loop through the items after the row is created -->
  <div class="row"><!-- Begins the row -->
    <% @task_lists.each do |task_list| %>
        <div class="col-sm-4"><!-- Need to add the column after the start of the loop to get the cards to align in columns -->
          
          <!-- Render the grid of buckets -->
          <%= render task_list %>

          <p>
            <% link_to "Open this bucket", task_list, class: "btn btn-secondary" %>
          </p>

        </div><!-- End col -->
      <% end %>
  </div><!-- End row --> 
  <div>
    <p>Number of tasks in all buckets: <%= @task_list_items.select(:task_list_id).count(:task_list_id) %></p>
  </div>
</div>


